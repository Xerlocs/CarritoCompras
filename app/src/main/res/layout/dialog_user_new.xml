<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/OtroCeleste"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/titulo"
        android:textColor="@color/AzulOscuro"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/textInputNombre"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="@string/N_ejemplo" />

    <EditText
        android:id="@+id/textInputTipo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="@string/T_ejemplo" />

    <EditText
        android:id="@+id/textInputCantidad"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="@string/C_ejemplo"
        android:inputType="number" />

    <EditText
        android:id="@+id/textInputPrecio"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="@string/P_ejemplo"
        android:inputType="number" />

    <Button
        android:id="@+id/buttonAddAndGoBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/CoolBlue"
        android:text="@string/aÃ±adir" />

</LinearLayout>